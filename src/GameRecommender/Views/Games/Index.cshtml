@model IEnumerable<GameRecommender.Models.Game>

@{
    ViewData["Title"] = "Games";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Games Library</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-lg"></i> Add New Game
    </a>
</div>

<div class="card mb-4">
    <div class="card-body">
        <h5 class="card-title mb-3">
            <i class="bi bi-stars"></i> Recommended for You
        </h5>
        <p class="card-text">Based on your gaming preferences, we think you'll enjoy these games:</p>
        <div class="d-flex gap-2">
            <span class="badge bg-primary">RPG</span>
            <span class="badge bg-primary">Action</span>
            <span class="badge bg-primary">Adventure</span>
        </div>
    </div>
</div>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    @foreach (var game in Model)
    {
        <div class="col">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">@game.Title</h5>
                    <div class="card-text">
                        <div class="mb-2">
                            <span class="badge bg-primary">@game.Genre</span>
                            <span class="badge bg-secondary">@game.Platform</span>
                        </div>
                        <p class="text-primary fw-bold">@game.Price.ToString("C")</p>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-top">
                    <div class="d-flex justify-content-end gap-2">
                        <a href="#" class="btn btn-sm btn-outline-primary">Details</a>
                        <a href="#" class="btn btn-sm btn-outline-secondary">Edit</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="text-center my-5">
        <h3>No games found</h3>
        <p>Start by adding some games to your library!</p>
    </div>
} 