@model List<GameRecommender.Models.SteamGame>

@{
    ViewData["Title"] = "Recommended Games";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Recommended Games</h2>
        <div>
            <a asp-action="StartRecommendation" class="btn btn-outline-primary me-2">
                <i class="bi bi-arrow-repeat me-2"></i>Start Over
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-collection me-2"></i>Back to Library
            </a>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var game in Model)
            {
                <div class="col">
                    <div class="card h-100 recommendation-card">
                        <img src="@game.LogoUrl" class="card-img-top" alt="@game.Name" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">@game.Name</h5>
                            <div class="card-text">
                                <div class="mb-2">
                                    <span class="badge bg-steam me-1">
                                        <i class="bi bi-steam me-1"></i>Steam
                                    </span>
                                    <span class="badge bg-info">@(game.PlaytimeMinutes / 60)h played</span>
                                </div>
                                <div class="tags-container">
                                    @foreach(var tag in game.Tags)
                                    {
                                        <span class="badge bg-primary me-1 mb-1">@tag</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <h4 class="alert-heading">No matches found!</h4>
            <p>We couldn't find any games in your library matching your preferences. Try adjusting your criteria or check out the Steam store for new games that match your interests.</p>
            <hr>
            <div class="mt-3">
                <a asp-action="StartRecommendation" class="btn btn-primary">
                    Try Again
                </a>
            </div>
        </div>
    }
</div>

<style>
    .recommendation-card {
        transition: transform 0.2s, box-shadow 0.2s;
    }
    
    .recommendation-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }
    
    .tags-container {
        max-height: 80px;
        overflow-y: auto;
        scrollbar-width: thin;
    }
    
    .badge.bg-primary { background-color: #3b71ca; }
    .badge.bg-secondary { background-color: #6c757d; }
    .badge.bg-success { background-color: #14a44d; }
    .badge.bg-danger { background-color: #dc4c64; }
    .badge.bg-warning { background-color: #e4a11b; }
    .badge.bg-info { background-color: #54b4d3; }
    .badge.bg-steam { background-color: #1b2838; }
    
    .badge {
        font-size: 0.85em;
        padding: 0.5em 0.75em;
        border-radius: 12px;
    }
</style> 